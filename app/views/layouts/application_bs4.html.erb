    <meta property="og:description" content="<%= @page.og.description %>"/>
  <% end %>
  <% if @page.og.image %>
    <meta property="og:image" content="<%= @page.og.image %>"/>
  <% end %>
  <% if @page.og.secure_url %>
    <meta property="og:image:secure_url" content="<%= @page.og.secure_url %>"/>
  <% end %>
